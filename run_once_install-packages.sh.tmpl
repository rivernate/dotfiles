{{ if eq .chezmoi.os "linux" -}}
{{ if eq .chezmoi.osRelease.id "arch" -}}
#!/usr/bin/env bash
sudo pacman -S --needed git base-devel
if ! [ -x "$(command -v yay)" ]; then
  git clone https://aur.archlinux.org/yay-bin.git && cd yay-bin && makepkg -si
fi
cd ~/ && rm -rf ~/yay-bin
yay
yay -Scc --needed antigen-git bitwarden-cli direnv nvm-git rbenv-git ripgrep ruby-build-git vim zsh zsh-theme-powerlevel10k-git openssh

shell=$(pinky -l $USER|grep -oP 'Shell: \K.*')
if [ $shell != "/bin/zsh" ]
then
  chsh -s /bin/zsh
  echo "Shell changed to ZSH you need to logout and log back in"
fi
{{ end -}}
{{ end -}}
